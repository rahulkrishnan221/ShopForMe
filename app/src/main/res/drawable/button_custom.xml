<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
    <shape>
        <solid
            android:color="#9FADAD" />
        <stroke
            android:width="1dp"
            android:color="#9FADAD" />
        <corners
            android:radius="6dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
    <item>
        <shape>
            <gradient
                android:startColor="#9FADAD"
                android:endColor="#9FADAD"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#9FADAD" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>